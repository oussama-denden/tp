<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd 
    http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.1.xsd">

	<mvc:annotation-driven />
	
	<context:component-scan base-package="com.nordnet.topaze.livraison.outil.controller" />
	<context:component-scan
        base-package="com.nordnet.topaze.livraison.outil.service" />
    <context:component-scan base-package="com.nordnet.topaze.livraison.outil.swagger" />

	<mvc:default-servlet-handler />
	
	<!-- creates a controller at /api-docs from this uri, which serves swagger's raw documentation in JSON format. -->
    <bean class="com.mangofactory.swagger.configuration.SpringSwaggerConfig" />

</beans>
